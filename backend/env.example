# Database
DATABASE_URL="postgresql://username:password@localhost:5432/proofmeet"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"

# Zoom Integration (Server-to-Server OAuth)
ZOOM_ACCOUNT_ID="your-zoom-account-id"
ZOOM_CLIENT_ID="your-zoom-client-id"
ZOOM_CLIENT_SECRET="your-zoom-client-secret"
ZOOM_WEBHOOK_SECRET="your-zoom-webhook-secret"

# Microsoft Teams Integration (Future)
TEAMS_APP_ID="your-teams-app-id"
TEAMS_APP_PASSWORD="your-teams-app-password"

# Court System Integration
COURT_API_ENDPOINT="https://court-api.example.com"
COURT_API_KEY="your-court-api-key"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# Security
BCRYPT_ROUNDS=12
# CORS_ORIGIN: Comma-separated list of allowed origins for CORS
# Production: Your Vercel frontend URL
# Development: Include localhost ports for local dev
CORS_ORIGIN="https://proof-meet-frontend.vercel.app,http://localhost:3000,http://localhost:5173"

# QR Code
QR_CODE_SIZE=256
QR_CODE_ERROR_CORRECTION_LEVEL="M"

# Meeting Sync
# CORS_PROXY_URL: Optional CORS proxy for fetching external meetings
# Default: https://corsproxy.io/? (free, rate limited)
# Paid options: ScraperAPI, Bright Data, Oxylabs
# Example: https://api.scraperapi.com?api_key=YOUR_KEY&url=
CORS_PROXY_URL="https://corsproxy.io/?"

# Admin Tools
# ADMIN_SECRET_KEY: Secret for accessing admin endpoints (meeting sync, stats, etc.)
ADMIN_SECRET_KEY="your-secure-random-secret-here"
