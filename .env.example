# Docker Compose Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# PostgreSQL Database
POSTGRES_DB=proofmeet
POSTGRES_USER=proofmeet
POSTGRES_PASSWORD=your_secure_password_here

# Backend Configuration
DATABASE_URL=postgresql://proofmeet:your_secure_password_here@postgres:5432/proofmeet
NODE_ENV=development
PORT=5000
JWT_SECRET=generate_a_strong_random_secret_here
JWT_EXPIRES_IN=24h
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:5000/api

# Email Configuration (Optional for local dev)
BYPASS_EMAIL_VERIFICATION=true

# Logging
LOG_LEVEL=debug

# How to generate a secure JWT_SECRET:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Or use: openssl rand -hex 64
